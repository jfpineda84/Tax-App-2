    <h1>Sign up and maximize your tax return</h1>
<h2>Sign up</h2>

<%= form_for @user do |f| %>
<p>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
</p>
<p>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
</p>
<p>
  <%= f.label :email %>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.label :username %>
  <%= f.text_field :username %>
</p>

<p>
  <%= f.label :password %>
  <%= f.password_field :password %>
</p>

<p>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>

<h2>Log in</h2>
<%= form_tag sessions_path do %>
<p>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
</p>

<p>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</p>

<p>
  <%= submit_tag 'Log in' %>
</p>
<% end %>
