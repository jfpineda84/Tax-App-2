
<section class="module parallax parallax-1">
  <div class="container">
  </div>
</section>

<section class="module content">
  <div class="container">
  </div>
</section>
<p id="notice"><%= notice %></p>
<div class="welcome">
  <h1>Welcome back, <%= current_user.first_name %>!</h1>
  <h2>Expense Categories</h2>
  <p>create categories to organize your receipts in different groups</p>
</div>
<div class="newexpensebutton">
<%= link_to 'Create New Category', new_expense_category_path, class: 'btn btn-default btn-lg'  %>
</div>
<table>
  <!-- <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead> -->

  <tbody>
    <% @expense_categories.each do |expense_category| %>
    <tr>
      <td><%= expense_category.title %></td>
      <td><%= link_to 'Show', expense_category %></td>
      <td><%= link_to 'Edit', edit_expense_category_path(expense_category) %></td>
      <td><%= link_to 'Delete', expense_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

