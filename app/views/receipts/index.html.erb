<p id="notice"><%= notice %></p>
<br>
<h1>Receipts</h1>
<br>
<%= link_to 'New Receipt', new_receipt_path %>
<table>
  <thead>
    <tr>
      <th>Expense category</th>
      <th>Photo</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<br>
<tbody>
  <% @receipts.each do |receipt| %>
    <tr>
      <td><%= receipt.expense_category.title %></td>
      <td><%= image_tag receipt.picture.url(:medium)%></td>
      <td><%#= receipt.picture %></td>
      <td><%#= link_to 'Show', receipt_path %></td>
      <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
      <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
